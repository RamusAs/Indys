{
	"manifest_version": 3,
	"name": "Site-specific side panel",
	"version": "1.0",
	"description": "Use the action icon or keyboard shortcut to open the side panel on google.com",
	"background": {
		"service_worker": "service-worker.js"
	},
	"action": {
		"default_title": "Click to open panel"
	},
	"permissions": ["sidePanel", "tabs", "fontSettings"],
	"commands": {
		"_execute_action": {
			"suggested_key": {
				"default": "Ctrl+B",
				"mac": "Command+B"
			}
		}
	},

	"icons": {
		"16": "images/zoom16.png",
		"48": "images/zoom48.png"
	},
	"content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
}
